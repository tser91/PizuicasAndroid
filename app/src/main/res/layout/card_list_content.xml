<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_4dp"
    android:layout_marginEnd="@dimen/spacing_4dp"
    android:layout_marginLeft="@dimen/spacing_4dp"
    android:layout_marginRight="@dimen/spacing_4dp"
    android:layout_marginStart="@dimen/spacing_4dp"
    android:layout_marginTop="@dimen/spacing_4dp"
    android:clickable="true"
    android:elevation="2dp"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription-->
        <com.pizuicas.pizuicas.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_width"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:transitionName="@string/image_transition" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:paddingEnd="@dimen/spacing_16dp"
                android:paddingLeft="@dimen/spacing_12dp"
                android:paddingRight="@dimen/spacing_16dp"
                android:paddingStart="@dimen/spacing_12dp"
                android:paddingTop="24dp">

                <TextView
                    android:id="@+id/item_title"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_price"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />

            </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
